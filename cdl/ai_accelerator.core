CAPI=2:
name: "u337mg096:ece337:ai_accelerator:1.0.0"
description: ""

filesets:
    rtl:
        files:
            - "source/ai_accelerator.sv"
        file_type: systemVerilogSource
        depend:
            - "u337mg096:ece337:activation:1.0.0"
            - "u337mg096:ece337:ahb_sub:1.0.0"
            - "u337mg096:ece337:bias_adder:1.0.0"
            - "u337mg096:ece337:systolic_array:1.0.0"
            - "u337mg096:ece337:controller:1.0.0"
            - "u337mg096:ece337:sram_buffer:1.0.0"
            - "ece337:course-lib:ahb_model_updated"

    synth:
        depend:
            - "ece337:tech:AMI_05_LIB"
            - "u337mg096:ece337:ai_accelerator_syn"

    tb:
        files:
            - "testbench/tb_ai_accelerator.sv"
            - "waves/ai_accelerator.do": { file_type: user }
            - "waves/ai_accelerator.gtkw": { file_type: user }
            # - "data/file.txt": { file_type: user }
        file_type: systemVerilogSource

    synfiles:
        depend:
            - "u337mg096:ece337:synfiles"

targets:
    default: &default
        filesets:
            - rtl
        toplevel: ai_accelerator

    sim: &sim
        <<: *default
        default_tool: verilator
        filesets_append:
            - tb
        toplevel: tb_ai_accelerator
        tools:
            modelsim:
                vsim_options:
                    - -vopt
                    - -voptargs='+acc'
                    - -t ps
                    - -do waves/ai_accelerator.do
                    - -onfinish stop
                    - -do "set PrefSource(OpenOnFinish) 0 ; set PrefMain(LinePrefix) \"\" ; set PrefMain(colorizeTranscript) 1"
                    - -coverage
                vlog_options:
                    - +cover
            verilator:
                verilator_options:
                    - --cc
                    - --trace
                    - --main
                    - --timing
                    - --coverage
                make_options:
                    - -j

    lint:
        <<: *default
        default_tool: verilator
        filesets_append:
            - tb
        tools:
            verilator:
                mode: lint-only
                verilator_options:
                    - --timing
                    - -Wall

    syn:
        <<: *default
        filesets_append:
            - synfiles
        default_tool: design_compiler
        toplevel: ai_accelerator
        tools:
            design_compiler:
                script_dir: "src/u337mg096_ece337_synfiles_0"
                dc_script: "synth.tcl"
                report_dir: "reports"
                target_library: "/home/ecegrid/a/ece337/summer24-refactor/tech/ami05/osu05_stdcells.db"
                libs: "/home/ecegrid/a/ece337/summer24-refactor/tech/ami05/osu05_stdcells.db dw_foundation.sldb"

    syn_sim:
        <<: *sim
        filesets:
            - synth
            - tb

